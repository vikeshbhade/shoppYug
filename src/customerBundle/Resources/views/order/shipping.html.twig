{% extends "customerBundle::layout.html.twig" %}

{% block content %}
<!-- Navigation and Carousel -->
	<div class="ui container" id="stepflow">
		<div class="ui segment">
			<div class="ui three top attached steps">
			  <div class="active step">
			    <i class="truck icon"></i>
			    <div class="content">
			      <div class="title">Shipping</div>
			      <div class="description">Choose your shipping options</div>
			    </div>
			  </div>
			  <div class="step">
			    <i class="payment icon"></i>
			    <div class="content">
			      <div class="title">Billing</div>
			      <div class="description">Enter billing information</div>
			    </div>
			  </div>
			  <div class="disabled step">
			    <i class="info icon"></i>
			    <div class="content">
			      <div class="title">Confirm Order</div>
			      <div class="description">Verify order details</div>
			    </div>
			  </div>
			</div>
			<div class="ui attached segment">
			  <form action="{{url('saveShipping')}}" class="ui form" method="POST">
				  <h4 class="ui dividing header">Shipping Information</h4>
				  <div class="field">
				    <label>Name</label>
				    <div class="two fields">
				      <div class="field">
				        <input name="firstName" placeholder="First Name" type="text">
				      </div>
				      <div class="field">
				        <input name="lastName" placeholder="Last Name" type="text">
				      </div>
				    </div>
				  </div>
				  <div class="field">
				    <label>Billing Address</label>
				    <div class="three fields">
				      <div class="field">
				        <input name="address1" placeholder="Street Address" type="text">
				      </div>
				      <div class="field">
				        <input name="address2" placeholder="Apt #" type="text">
				      </div>
				      <div class="field">
				        <input name="landmark" placeholder="Landmark" type="text">
				      </div>
				    </div>
				  </div>
				  <div class="two fields">
				    <div class="field">
				      <label>State</label>
				      <select class="ui fluid dropdown" name="states">
				        <option value="">State</option>
						    <option value="MH">Maharashtra</option>
						    <option value="GJ">Gujarat</option>
						    
				      </select>
				    </div>
				    <div class="field">
				      <label>Country</label>
				      <div class="ui fluid search selection dropdown">
				        <input name="country" type="hidden" value="IN">
				        <i class="dropdown icon"></i>
				        <div class="default text">Select Country</div>
				        <div class="menu">
				        	<div class="item" data-value="in"><i class="in flag"></i>India</div>
					  	</div>
				       </div>
				    </div>
				  </div>
				    		   
				   <div class="ui segment">
				    <div class="field">
				      <div class="ui checkbox">
				        <input name="gift" tabindex="0" type="checkbox">
				        <label>Send it as a Gift</label>
				      </div>
				    </div>
					</div>
					<input type="submit" class="ui button" name="submit" value="Next">
				  <!-- <div class="ui button" tabindex="0">Next</div> -->
				</form>
			</div>
						
		</div>
	</div>
{% endblock %}	
