{% extends "customerBundle::layout.html.twig" %}
{% block header %}

{% endblock %}

{% block content %}
<!-- Navigation and Carousel -->
{% block fos_user_content %}
	
{% endblock %}
	<div id="desktop">
  	<div class="ui container fluid">
  		<div class="ui top banner test ad" data-text="" id="signup-banner" style="width: 100%;">
  			<div class="ui grid">
  				<div class="ui four wide columns">
				<img src="{{asset('bundles/customerBundle/images/logo.png')}}" alt="noimg">
				</div>
  				<div class="ui twelve wide columns">
				</div>
			</div>
		</div>
  	</div>	
  	
  	<div class="ui container">
  		<div class="login-block">
  			<div class="ui grid">
  				<div class="row">
			      <div class="three wide column"></div>
			      <div class="ten wide column">
			      	<div class="form-signup">
		  				<div class="ui attached message">
						  <div class="header">
						    Welcome to our site!
						  </div>
						  <p>Fill out the form below to sign-up for a new account</p>
						</div>
						<form class="ui form attached fluid segment fos_user_registration_register" id="signup" action="{{ path('fos_user_registration_register') }}"  method="POST" >
						  <div class="field">
						    <label>Email</label>
						    <input placeholder="email" type="text" name="username">
						  </div>
						  <div class="field">
						    <label>Password</label>
						    <input type="password" placeholder="Enter password" id="password" name="password" >
						  </div>
						  <div class="field">
						    <label>Re-Enter Password</label>
						    <input type="password" placeholder="Re-enter password" id="password1" name="password1">
						  </div>
						  <div class="inline field">
						    <div class="ui checkbox">
						      <input id="terms" type="checkbox">
						      <label for="terms">I agree to the terms and conditions</label>
						    </div>
						  </div>
						  
						  <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" >

						  <div class="ui error message" id="errormsg"></div>

						</form>
						<div class="ui bottom attached warning message">
						  <i class="icon help"></i>
						  Already signed up? <a href="#" id="regbtn">Login here</a> instead.

						</div>
		  			</div>
		  			<div id="form-signin">
		  				<div class="ui attached message">
						  <div class="header">
						    Login
						  </div>
						  
						</div>
						<form action="{{path('signin')}}" class="ui form attached fluid segment" method="POST" id="signin">
						  <div class="field">
						    <label>Email</label>
						    <input placeholder="Username" type="email" name="email">
						  </div>
						  <div class="field">
						    <label>Password</label>
						    <input type="password" name="password" placeholder="Enter password">
						  </div>
						  <div class="inline field">
						    <div class="ui checkbox">
						      <input id="remember" type="checkbox">
						      <label for="remember">Remember me</label>
						    </div>
						  </div>
						  <input type="submit" class="ui blue button" name="submit" value="submit">
						  <div class="ui error message"></div>
						</form>
						<div class="ui bottom attached warning message">
						  <i class="icon help"></i>
						  Not having a account.<a href="#" id="logbtn">Register here?</a>
						</div>
									
		  			</div>
			      </div>
			      <div class="three wide column"></div>
			    </div>
  				
  			</div>
  		</div>
  		

  	</div>

{% endblock %}	
